package crud;

import java.util.Scanner;

import dao.HospedagemDAO;
import dao.TransporteDAO;
import dao.ReservaDAO;
import dao.ClienteDAO;
import modelo.Hospedagem;
import modelo.Transporte;
import modelo.Reserva;
import modelo.Cliente;


public class ReservaCrud {
	
	public static void main(String[] args) {
		ReservaDAO reservaDAO = new ReservaDAO();
		HospedagemDAO hospedagemDAO = new HospedagemDAO();
		TransporteDAO transporteDAO = new TransporteDAO();
		ClienteDAO clienteDAO = new ClienteDAO();

		Scanner s = new Scanner(System.in);
		int opcao = 0;
		int posicao = 0;

		int id = 0;
		String origem = "";
		String destino = "";
		int ida = 0;
		int volta = 0;
		int acompanhantes = 0;
		double valor = 0;
		int id_transporte = 0;
		int id_hospedagem = 0;
		

		do {
			System.out.println("=== CRUD Reservas ===");
			System.out.println("1 - Cadastrar Reserva");
			System.out.println("2 - Consultar Reserva");
			System.out.println("3 - Atualizar Reserva");
			System.out.println("4 - Deletar Reserva");
			System.out.println("5 - Buscar por id");
			System.out.println("0 - Sair");
			opcao = s.nextInt();
			s.nextLine();

			switch (opcao) {
			case 1:
				// CREATE
				System.out.println("Digite a cidade de origem: ");
				origem = s.nextLine();
				System.out.println("Digite a cidade destino: ");
				destino = s.nextLine();
				System.out.println("Digite a data de IDA: ");
				ida = s.nextInt();
				s.nextLine();
				System.out.println("Digite a data de VOLTA: ");
				volta = s.nextInt();
				s.nextLine();
				System.out.println("Digite o número de acompanhantes: ");
				acompanhantes = s.nextInt();
				s.nextLine();
				System.out.println("Digite o valor da reserva: R$");
				valor = s.nextDouble();
				s.nextLine();
				System.out.println("Digite o id do Transporte: ");
				id_transporte = s.nextInt();
				s.nextLine();
				System.out.println("Digite o id do Transporte: ");
				id_hospedagem = s.nextInt();
				s.nextLine();
				
				Hospedagem hospedagem = hospedagemDAO.getHospedagemById(id_hospedagem);
				Transporte transporte = transporteDAO.getTransporteById(id_transporte);

				Reservas r1 = new Reservas(id, origem, destino, ida, volta, acompanhantes, transporte, hospedagem, valor);

				reservaDAO.save(r1);

				System.out.println("\n***  Cadastro realizado com sucesso!  ***\n");

				break;
			case 2:
				// READ
				for (Reserva r : reservaDAO.getReserva()) {
					System.out.println("Id: " + r.getId() 
										+ "Origem: " + r.getOrigem() 
										+ "Destino: " + r.getDestino() 
										+ "Ida: " + r.getIda() 
										+ "Volta: "	+ r.getVolta()
										+ "Acompanhantes: " + r.getAcompanhantes()
										+ "Transporte: " + r.getNome().getTransporte()
										+ "Hospedagem: " + r.getNome().getHospedagem()
										+ "Preço: R$ " + r.getValor());
					}

				System.out.println("Consulta realizada com sucesso!");
				break;
			
			case 3:
				// UPDATE
				System.out.println("Digite a cidade de origem: ");
				origem = s.nextLine();
				System.out.println("Digite a cidade destino: ");
				destino = s.nextLine();
				System.out.println("Digite a data de IDA: ");
				ida = s.nextInt();
				s.nextLine();
				System.out.println("Digite a data de VOLTA: ");
				volta = s.nextInt();
				s.nextLine();
				System.out.println("Digite o número de acompanhantes: ");
				acompanhantes = s.nextInt();
				s.nextLine();
				System.out.println("Digite o valor da reserva: R$");
				valor = s.nextDouble();
				s.nextLine();
				System.out.println("Digite o id do Transporte: ");
				id_transporte = s.nextInt();
				s.nextLine();
				System.out.println("Digite o id do Transporte: ");
				id_hospedagem = s.nextInt();
				s.nextLine();
				
				Hospedagem hospedagem1 = hospedagemDAO.getHospedagemById(id_hospedagem);
				Transporte transporte1 = transporteDAO.getTransporteById(id_transporte);

				Reservas r2 = new Reservas(posicao, origem1, destino1, ida1, volta1, acompanhantes1, transporte1, hospedagem1, valor1);

				reservaDAO.update(r2);

				System.out.println("Atualizado com sucesso!");
				break;
				
			case 4:
				// DELETE
				System.out.println("Digite o id da Reserva: ");
				posicao = s.nextInt();

				reservaDAO.deleteById(posicao);

				break;
				
			case 5:
				// buscar por id
				System.out.println("Digite o id da Reserva: ");
				posicao = s.nextInt();

				Reservas r3 = reservaDAO.getReservaById(posicao);
				
				System.out.println("Id: " + r.getId() 
				+ "Origem: " + r3.getOrigem() 
				+ "Destino: " + r3.getDestino() 
				+ "Ida: " + r3.getIda() 
				+ "Volta: "	+ r3.getVolta()
				+ "Acompanhantes: " + r3.getAcompanhantes()
				+ "Transporte: " + r3.getNome().getTransporte()
				+ "Hospedagem: " +r3.getNome().getHospedagem()
				+ "Preço: R$ " + r3.getValor());

				break;
				
			default:
				System.out.println(opcao != 0 ? "Opção inválida, digite novamente." : "");
				break;
			}

		} while (opcao != 0);

		System.out.println("Até mais!");
		s.close();
	}

}
